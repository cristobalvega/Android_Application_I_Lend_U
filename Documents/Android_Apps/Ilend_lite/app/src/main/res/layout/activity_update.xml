<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.cristobal.ilend_lite.UpdateActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="Name  :"
        android:id="@+id/textView2_name"
        android:layout_alignBaseline="@+id/editText_name"
        android:layout_alignBottom="@+id/editText_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date  :"
        android:id="@+id/textView_date"
        android:layout_marginTop="38dp"
        android:layout_below="@+id/editText2_who"
        android:layout_alignLeft="@+id/textView2_who"
        android:layout_alignStart="@+id/textView2_who"
        android:layout_alignRight="@+id/textView2_name"
        android:layout_alignEnd="@+id/textView2_name" />

    <TextView
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thing:"

        android:layout_marginTop="30dp"
        android:id="@+id/textView2_who"
        android:layout_below="@+id/editText2_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/textView2_name"
        android:layout_alignEnd="@+id/textView2_name" />

    <EditText
        android:hint="Insert Name of your dude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText2_name"
        android:padding="12dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/textView2_name"
        android:layout_toEndOf="@+id/textView2_name" />

    <EditText
        android:hint="Insert type of thing"
        android:padding="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText2_who"
        android:layout_alignTop="@+id/textView2_who"
        android:layout_alignLeft="@+id/editText2_name"
        android:layout_alignStart="@+id/editText2_name"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="ID: "
        android:textSize="20dp"
        android:padding="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:layout_above="@+id/datePicker2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:hint="Insert ID of thing want deleate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView5"
        android:layout_alignRight="@+id/editText2_who"
        android:layout_alignEnd="@+id/editText2_who"
        android:layout_alignLeft="@+id/editText2_who"
        android:layout_alignStart="@+id/editText2_who"
        android:id="@+id/editText" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home"
        android:id="@+id/button_HomeU"
        android:layout_marginTop="83dp"
        android:layout_below="@+id/textView_date"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />



    <Button
        android:id="@+id/button_updateU"
        android:text="Update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_HomeU"
        android:layout_toLeftOf="@+id/datePicker2"
        android:layout_toStartOf="@+id/datePicker2"
        android:layout_marginTop="30dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View All"
        android:id="@+id/button_viewAllU"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="19dp" />

    <DatePicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/datePicker2"
        android:layout_alignTop="@+id/textView_date"
        android:layout_toRightOf="@+id/button_HomeU"
        android:layout_toEndOf="@+id/button_HomeU" />


</RelativeLayout>
